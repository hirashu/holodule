<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainScheduleFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">


                <Button
                    android:id="@+id/btAllHololive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/all_hololive" />

                <Button
                    android:id="@+id/btHololive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hololive" />

                <Button
                    android:id="@+id/btHoloStars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/holostars" />
            </TableRow>
        </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lvSchedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical" />

    </LinearLayout>
</FrameLayout>